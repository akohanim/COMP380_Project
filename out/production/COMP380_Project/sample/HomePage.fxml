<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../TealTeam.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.HomePage">
   <bottom>
      <HBox alignment="BASELINE_RIGHT" prefHeight="24.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Account" onAction="#clickedAccount">
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
            </Button>
            <Button fx:id="LogOutButton" onAction="#clickedLogout" mnemonicParsing="false" styleClass="button"
                    text="Logout">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0"/>
               </HBox.margin>
            </Button>
         </children></HBox>
   </bottom>
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #536668;" stylesheets="@../TealTeam.css"
                  BorderPane.alignment="CENTER">
         <content>
            <TilePane fx:id="tilePane" hgap="50.0" minHeight="800.0" prefColumns="4"
                      style="-fx-background-color: #536668" stylesheets="@../TealTeam.css" vgap="50.0">
               <children>
                  <Button fx:id="AddCourseButton" alignment="CENTER" graphicTextGap="0.0" mnemonicParsing="false"
                          onAction="#clickAdd" prefHeight="150.0" prefWidth="150.0"
                          style="-fx-background-color: transparent;" TilePane.alignment="TOP_LEFT">
                     <TilePane.margin>
                        <Insets/>
                     </TilePane.margin>
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../thumbnails/AddButton.png"/>
                           </image>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                     </padding>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets right="1.0"/>
               </opaqueInsets>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
