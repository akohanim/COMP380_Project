<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="176.0" prefWidth="512.0" stylesheets="@../TealTeam.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddAssignmentPage">
    <top>
        <HBox alignment="BOTTOM_CENTER" prefHeight="36.0" prefWidth="512.0" BorderPane.alignment="BOTTOM_LEFT">
            <children>
                <Label text="Add Assignment Information"/>
            </children>
        </HBox>
    </top>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="262.0" minWidth="10.0" prefWidth="262.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="252.0" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4">
                    <children>
                        <Button fx:id="AddButton" mnemonicParsing="false" onAction="#clickedAddButton" text="Add" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <children>
                        <Button fx:id="CancelButton" mnemonicParsing="false" onAction="#clickedCancel" text="Cancel" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="80.0" prefWidth="222.0" spacing="5.0" GridPane.rowIndex="1">
                    <children>
                        <Label text="Name: ">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin></Label>
                        <TextField fx:id="NameTextField" alignment="TOP_CENTER">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin></TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" layoutX="155.0" layoutY="90.0" prefHeight="80.0" prefWidth="222.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label text="Points:">
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets bottom="10.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="PointsTextField" alignment="TOP_CENTER">
                            <HBox.margin>
                                <Insets bottom="10.0" />
                            </HBox.margin></TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="5.0" />
                    </GridPane.margin>
               <children>
                  <ComboBox fx:id="ComboBox">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" GridPane.rowIndex="2">
                    <children>
                        <Label text="Assignment Type">
                            <HBox.margin>
                                <Insets right="5.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </bottom>
</BorderPane>
